<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorGro"
    android:focusableInTouchMode="true"
    tools:context="com.lx.abcdemo.activity.MainActivity">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/main_drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/colorBlank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xp60"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp144">
        <android.support.v7.widget.Toolbar
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/main_toolBar"
            android:background="@color/colorBlank"
            android:navigationIcon="@drawable/person"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xp143">
    <TextView
        android:layout_gravity="center"
        android:textSize="@dimen/xp53"
        android:textColor="@color/colorYellow"
        android:text="小D汽配"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
        <View
            android:background="#19000000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xp1"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp118"
        android:orientation="horizontal"
        >
       <TextView
           android:textSize="@dimen/xp48"
           android:id="@+id/tv_one"
           android:textColor="@color/colorYellow"
           android:layout_width="0dp"
           android:gravity="center"
           android:text="品牌"
           android:layout_weight="1"
           android:layout_height="match_parent" />
       <TextView
            android:textColor="@color/colorGroT"
            android:id="@+id/tv_two"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="@dimen/xp48"
            android:text="车系"
            android:layout_weight="1"
            android:layout_height="match_parent" />
       <TextView
            android:textColor="@color/colorGroT"
            android:id="@+id/tv_three"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="@dimen/xp48"
            android:text="车型"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp2"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <View
                android:id="@+id/v_one"
                android:background="@drawable/main_view_bg"
                android:layout_width="@dimen/xp120"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <View
                android:visibility="gone"
                android:id="@+id/v_two"
                android:background="@drawable/main_view_bg"
                android:layout_width="@dimen/xp120"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <View
                android:visibility="gone"
                android:id="@+id/v_three"
                android:background="@drawable/main_view_bg"
                android:layout_width="@dimen/xp120"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>
        <View
            android:background="#19000000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xp1"/>
    <FrameLayout
                android:background="@drawable/main_frame__bg"
                android:elevation="@dimen/xp2"
                android:layout_marginLeft="@dimen/xp15"
                android:layout_marginRight="@dimen/xp15"
                android:layout_marginTop="@dimen/xp28"
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
    <LinearLayout
        android:paddingBottom="@dimen/xp20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp426">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xp70">
            <TextView
                android:layout_marginTop="@dimen/xp25"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/xp45"
                android:text="当前车型: "
                android:textSize="@dimen/xp40"
                android:textColor="#3C3C3C"
                android:layout_marginLeft="@dimen/xp40"
                />
            <TextView
                android:layout_marginTop="@dimen/xp25"
                android:id="@+id/main_tv_selected"
                android:textSize="@dimen/xp40"
                android:gravity="center_vertical"
                android:textColor="@color/colorYellow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/xp45" />
        </LinearLayout>

        <FrameLayout
            android:layout_marginLeft="@dimen/xp17"
            android:layout_marginRight="@dimen/xp17"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/xp25"
            android:layout_height="@dimen/xp144">
        <EditText
            android:id="@+id/et_OEFind"
            android:background="@drawable/main_et_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="配件/OE号查询"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/xp40"
            android:gravity="center"
            />
            <ImageView
                android:layout_gravity="end"
                android:id="@+id/main_iv_go1"
                android:src="@drawable/btn_inquire"
                android:layout_width="@dimen/xp142"
                android:layout_height="@dimen/xp142"
                android:layout_marginTop="@dimen/xp1"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_marginLeft="@dimen/xp17"
            android:layout_marginRight="@dimen/xp17"
            android:layout_marginTop="@dimen/xp20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xp144">
            <EditText
                android:id="@+id/et_numberFind"
                android:background="@drawable/main_et_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="17位车价号查询"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/xp40"
                android:gravity="center"
                />
            <ImageView
                android:layout_gravity="end"
                android:id="@+id/main_iv_go2"
                android:src="@drawable/btn_inquire"
                android:layout_width="@dimen/xp142"
                android:layout_height="@dimen/xp142"
                android:layout_marginTop="@dimen/xp1"
                />
        </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
            android:layout_width="@dimen/xp754"
            android:layout_height="match_parent"
            android:id="@+id/navigationView"
            android:layout_gravity="left"
            android:background="@color/colorGro"
            app:headerLayout="@layout/main_header"
            />
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
