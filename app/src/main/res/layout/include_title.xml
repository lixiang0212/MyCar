<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlank"
    android:layout_height="@dimen/xp144">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp143">
    <ImageView
        android:paddingLeft="@dimen/xp36"
        android:paddingRight="@dimen/xp60"
        android:id="@+id/include_bar_ivBack"
        android:layout_width="@dimen/xp120"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_left"
        />
    <TextView
        android:id="@+id/include_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小D汽配"
        android:gravity="center"
        android:textSize="@dimen/xp53"
        android:textColor="@color/colorYellow"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:visibility="gone"
        android:id="@+id/include_bar_person"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/person"
        android:layout_marginRight="@dimen/xp36"
        />
    <TextView
        android:gravity="center"
        android:id="@+id/include_bar_add"
        android:visibility="gone"
        android:textSize="@dimen/xp40"
        android:textColor="@color/colorYellow"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/xp36"
        />
    </RelativeLayout>
    <View
        android:background="#19000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp1"/>
</LinearLayout>