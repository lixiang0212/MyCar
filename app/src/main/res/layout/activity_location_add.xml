<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorGro"
    android:id="@+id/activity_location_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lx.abcdemo.activity.LocationAddActivity">
    <include layout="@layout/include_title"/>
    <TextView
        android:text="姓名"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <EditText
        android:id="@+id/location_add_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入联系人姓名"
        />
    <TextView
        android:text="电话"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <EditText
        android:id="@+id/location_add_number"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入联系人电话号码"
        />
    <TextView
        android:text="地址"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <EditText
        android:id="@+id/location_add_address"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入联系人地址"
        />
    <Button
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:id="@+id/location_add_yes"
        android:text="确定"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:textSize="18sp"
        android:id="@+id/location_add_back"
        android:text="返回"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
