<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorGro"
    android:layout_height="match_parent"
    tools:context="com.lx.abcdemo.activity.OrderActivity">
    <include layout="@layout/include_title"
        android:id="@+id/order_include"
        />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp150">
        <TextView
            android:id="@+id/order_yes"
            android:layout_toLeftOf="@+id/order_delete"
            android:background="@color/colorYellow"
            android:text="确认送达"
            android:textSize="@dimen/xp48"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_width="@dimen/xp300"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/order_delete"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:background="@color/colorBlank"
            android:textColor="@color/colorWhite"
            android:text="取消订单"
            android:textSize="@dimen/xp48"
            android:gravity="center"
            android:layout_width="@dimen/xp300"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/order_ll"
        android:background="@drawable/order_location"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp272"
        android:layout_below="@+id/order_include"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/order_tvName"
                android:text="老司机"
                android:layout_marginTop="@dimen/xp40"
                android:layout_marginLeft="@dimen/xp84"
                android:gravity="center_vertical"
                android:textSize="@dimen/xp48"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/xp40"
                android:layout_marginLeft="@dimen/xp108"
                android:gravity="center_vertical"
                android:textSize="@dimen/xp48"
                android:textColor="#333333"
                android:layout_toRightOf="@+id/order_tvName"
                android:id="@+id/order_tvNumber"
                android:text="18180112365"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/xp46"
                android:layout_marginLeft="@dimen/xp118"
                android:layout_toRightOf="@+id/order_tvNumber"
                android:id="@+id/order_tvSelected"
                android:text="默认"
                android:textColor="@color/colorWhite"
                android:background="@drawable/order_location_selected"
                android:gravity="center"
                android:textSize="@dimen/xp36"
                android:layout_width="@dimen/xp118"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/order_tvLine"
                android:layout_below="@+id/order_tvNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xp1"/>
            <ImageView
                android:id="@+id/order_iv"
                android:layout_marginLeft="@dimen/xp36"
                android:layout_marginTop="@dimen/xp50"
                android:background="@drawable/position"
                android:layout_below="@+id/order_tvLine"
                android:layout_width="@dimen/xp29"
                android:layout_height="@dimen/xp30" />
            <TextView
                android:layout_marginRight="@dimen/xp20"
                android:layout_marginTop="@dimen/xp40"
                android:layout_marginLeft="@dimen/xp20"
                android:id="@+id/order_tvAddress"
                android:text="四川省成都市武侯区一环路南一段普利大厦A座802室塘沽科技时代"
                android:textSize="@dimen/xp40"
                android:textColor="#3C3C3C"
                android:layout_below="@+id/order_tvLine"
                android:layout_toRightOf="@+id/order_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/order_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginRight="@dimen/xp36"
                android:id="@+id/order_it_Set"
                android:src="@drawable/arrow_right_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/order_ll1"
        android:layout_below="@+id/order_ll"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/xp30"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textColor="#3C3C3C"
            android:layout_marginTop="@dimen/xp30"
            android:layout_marginBottom="@dimen/xp30"
            android:text="订单编号:"
            android:gravity="center"
            android:textSize="@dimen/xp36"
            android:layout_marginLeft="@dimen/xp32"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_marginTop="@dimen/xp30"
            android:layout_marginBottom="@dimen/xp30"
            android:id="@+id/order_it_Number"
            android:text="1234567890"
            android:textColor="@color/colorYellow"
            android:gravity="center_vertical"
            android:textSize="@dimen/xp36"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/pay_item_ivStatus"
            android:layout_marginRight="@dimen/xp32"
            android:layout_gravity="end"
            android:src="@drawable/wait_receipt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/order_ll1"
        android:id="@+id/order_rl1"
        android:background="@color/colorGro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp280">
        <ImageView
            android:src="@drawable/babosi"
            android:id="@+id/order_it_Icon"
            android:layout_marginTop="@dimen/xp25"
            android:layout_marginLeft="@dimen/xp36"
            android:layout_width="@dimen/xp206"
            android:layout_height="@dimen/xp206" />
        <TextView
            android:id="@+id/order_it_Title"
            android:textSize="@dimen/xp36"
            android:layout_toRightOf="@+id/order_it_Icon"
            android:layout_marginRight="@dimen/xp36"
            android:layout_marginLeft="@dimen/xp36"
            android:layout_marginTop="@dimen/xp27"
            android:gravity="center_vertical"
            android:text="长城哈弗M4扶手箱H1M2绚丽C2专用汽车中央手扶箱改装配件"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/xp45"
            android:id="@+id/order_it_Price"
            android:text="¥31.80"
            android:textSize="@dimen/xp32"
            android:textColor="@color/colorRed"
            android:layout_below="@id/order_it_Title"
            android:layout_toRightOf="@id/order_it_Icon"
            android:layout_marginLeft="@dimen/xp36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/xp142"
            android:id="@+id/order_it_Sum"
            android:text="x20"
            android:textSize="@dimen/xp40"
            android:textColor="@color/colorGroT"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/xp36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/xp21"
            android:id="@+id/order_it_Total"
            android:text="合计:¥636.00"
            android:textSize="@dimen/xp36"
            android:textColor="@color/colorRed"
            android:layout_below="@id/order_it_Sum"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/xp36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/order_rl1"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="@dimen/xp30"
            android:layout_marginBottom="@dimen/xp30"
            android:text="送达倒计时"
            android:textColor="#3C3C3C"
            android:gravity="center"
            android:textSize="@dimen/xp36"
            android:layout_marginLeft="@dimen/xp32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toLeftOf="@+id/order_tvTime"
            android:layout_marginTop="@dimen/xp30"
            android:layout_marginBottom="@dimen/xp30"
            android:text="剩余 :"
            android:layout_marginRight="@dimen/xp10"
            android:textColor="#C3C3C3"
            android:gravity="center"
            android:textSize="@dimen/xp36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_tvTime"
            android:layout_marginTop="@dimen/xp30"
            android:layout_marginBottom="@dimen/xp30"
            android:text="23小时59分59秒"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorYellow"
            android:gravity="center"
            android:textSize="@dimen/xp36"
            android:layout_marginRight="@dimen/xp32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
