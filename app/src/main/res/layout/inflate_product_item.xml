<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="@dimen/xp280">

    <ImageView
        android:background="@drawable/product_iv_bg"

        android:layout_marginTop="@dimen/xp30"
        android:layout_marginLeft="@dimen/xp36"
        android:layout_marginBottom="@dimen/xp30"
        android:layout_width="@dimen/xp220"
        android:layout_height="@dimen/xp220"
        android:id="@+id/product_item_iv" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="@dimen/xp30"
            android:layout_marginLeft="@dimen/xp50"
            android:layout_marginRight="@dimen/xp50"
            android:id="@+id/product_item_name"
            android:textColor="#3C3C3C"
            android:textSize="@dimen/xp36"
            android:text="长城哈弗M4手扶箱H1M2绚丽C2专用汽车中央手扶箱改装配件"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/xp50"
            android:layout_alignParentBottom="true"
            android:id="@+id/product_item_price"
            android:gravity="center_vertical"
            android:textSize="@dimen/xp40"
            android:textColor="@color/colorRed"
            android:text="Y31.8"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/xp30"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>