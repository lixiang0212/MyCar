<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorGro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lx.abcdemo.activity.LoginPActivity">
    <include layout="@layout/include_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp300">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/text_box"
            android:layout_width="@dimen/xp210"
            android:layout_height="@dimen/xp210" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/xp206"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp158">
        <ImageView
            android:id="@+id/login_phone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xp49"
            android:src="@drawable/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@color/colorWhite"
            android:id="@+id/login_etPhoneP"
            android:hint="请输入手机号"
            android:layout_toRightOf="@+id/login_phone"
            android:layout_marginLeft="@dimen/xp50"
            android:gravity="center_vertical"
            android:textSize="@dimen/xp40"
            android:textColor="#C5C5C5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xp158">
        <ImageView
            android:id="@+id/login_password"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xp50"
            android:src="@drawable/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@color/colorWhite"
            android:id="@+id/login_etPassP"
            android:hint="请输入验证码"
            android:layout_toRightOf="@+id/login_password"
            android:layout_marginLeft="@dimen/xp50"
            android:gravity="center_vertical"
            android:textSize="@dimen/xp40"
            android:textColor="#C5C5C5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/login_getCodeP"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/xp65"
            android:gravity="center_vertical"
            android:textSize="@dimen/xp40"
            android:textColor="#C5C5C5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/login_p_view"
            android:visibility="invisible"
            android:layout_marginRight="@dimen/xp35"
            android:background="#F3C600"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/login_getCodeP"
            android:layout_width="@dimen/xp2"
            android:layout_height="@dimen/xp50"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="@dimen/xp330"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:background="@drawable/login_btn_bg"
            android:layout_marginLeft="@dimen/xp40"
            android:layout_marginRight="@dimen/xp40"
            android:id="@+id/login_btLoginP"
            android:text="登陆"
            android:textSize="@dimen/xp48"
            android:layout_alignParentBottom="true"
            android:textColor="#F3C600"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xp130" />
    </RelativeLayout>
</LinearLayout>
