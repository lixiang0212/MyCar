<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_frame__bg"
    tools:context="com.lx.abcdemo.fragment.FragmentC">

    <LinearLayout
        android:background="@drawable/main_frame__bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="@dimen/xp29"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/xp28"
            android:layout_height="@dimen/xp88">
            <TextView
                android:textColor="@color/colorYellow"
                android:gravity="center"
                android:textSize="@dimen/xp40"
                android:id="@+id/fragment_c_tv"
                android:layout_width="@dimen/xp184"
                android:layout_height="match_parent"
                />
            <EditText
                android:drawableStart="@drawable/search"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_toRightOf="@+id/fragment_c_tv"
                android:textSize="@dimen/xp40"
                android:background="@drawable/fragment_et_bg"
                android:layout_marginRight="@dimen/xp107"
                android:id="@+id/fragment_c_et"
                android:textColor="@color/colorWhite"
                android:hint="请输入车系"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:background="@color/colorGro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xp1"/>
        <LinearLayout
            android:background="@drawable/main_frame__bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="@dimen/xp30"
                android:background="@color/colorGro"
                android:orientation="vertical"
                android:layout_width="@dimen/xp240"
                android:layout_height="match_parent">

                <ListView
                    android:layout_weight="1"
                    android:dividerHeight="0dp"
                    android:background="@drawable/fragment_c_lista_bg"
                    android:scrollbars="none"
                    android:id="@+id/fragment_c_listView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <ImageView
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/xp20"
                    android:src="@drawable/list_drop_down"
                    />
            </LinearLayout>
            <View
                android:background="@color/colorGro"
                android:layout_width="@dimen/xp1"
                android:layout_height="match_parent"/>
            <ListView
                android:scrollbars="none"
                android:layout_marginRight="@dimen/xp30"
                android:background="#64ffffff"
                android:paddingLeft="@dimen/xp30"
                android:id="@+id/fragment_c_listViewT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
